<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.example.demo.mapper.UserMapper">
    
    <resultMap id="roleResultMap" type="com.example.demo.domain.Role">
        <result property="name" column="role_name"/>
    </resultMap>
    
    <resultMap id="userResultMap" type="com.example.demo.domain.User">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="email" column="email"/>
        <result property="password" column="password"/>
        <result property="isActive" column="is_active"/>
        <collection property="roles" ofType="com.example.demo.domain.Role" resultMap="roleResultMap"/>
    </resultMap>
   
    <select id="findByEmail" resultMap="userResultMap">
        SELECT 
            u.id AS id,               
            u.name AS name,
            u.email AS email,
            u.password AS password,
            u.is_active AS is_active,
            r.name AS role_name
        FROM
            user_master u
        LEFT JOIN role_definition r 
            ON u.id = r.user_id
        WHERE
            u.email = #{email}
    </select>
</mapper>
